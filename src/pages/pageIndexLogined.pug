extends ../views/layouts/layout

block vars
    - var pageClass = 'page-index'

block content
    main
        section.top
            include ../views/components/header-login

            .container
                .top__text
                    h1.h1 Междугороднее такси России 24/7
                    p.fs-20 Более 15&nbsp;лет помогаем вам передвигаться с&nbsp;комфортом

                .top__form
                    include ../views/components/route-tabs
                    include ../views/components/route-form
                        - var buttonType = 'modal'

                ul.vantages
                    li.vantages__el
                        picture.vantages__img
                            source(type='image/webp' srcset='/src/assets/img/img--top-1.webp 1x, /src/assets/img/img--top-1@2x.webp 2x')
                            img(srcset='/src/assets/img/img--top-1.png 1x, /src/assets/img/img--top-1@2x.png 2x' alt='Баннер')

                        span.vantages__text От&nbsp;адреса до&nbsp;адреса без попутчиков

                    li.vantages__el
                        picture.vantages__img
                            source(type='image/webp' srcset='/src/assets/img/img--top-2.webp 1x, /src/assets/img/img--top-2@2x.webp 2x')
                            img(srcset='/src/assets/img/img--top-2.png 1x, /src/assets/img/img--top-2@2x.png 2x' alt='Баннер')

                        span.vantages__text Время в&nbsp;пути не&nbsp;подлежит оплате

                    li.vantages__el
                        picture.vantages__img
                            source(type='image/webp' srcset='/src/assets/img/img--top-3.webp 1x, /src/assets/img/img--top-3@2x.webp 2x')
                            img(srcset='/src/assets/img/img--top-3.png 1x, /src/assets/img/img--top-3@2x.png 2x' alt='Баннер')

                        span.vantages__text Фиксированная стоимость

        section.how
            .container
                .row.row-2
                    .how__content
                        h2.h2 Как работает сервис

                        picture.how__img.mobile
                            source(type='image/webp' srcset='/src/assets/img/img--how.webp 1x, /src/assets/img/img--how@2x.webp 2x')
                            img(srcset='/src/assets/img/img--how.jpg 1x, /src/assets/img/img--how@2x.jpg 2x' alt='Баннер')

                        ul.how__list
                            li.how__el
                                span.how__number 01
                                .how__text
                                    span.title Вы&nbsp;оставляете заявку
                                    span Звоните по&nbsp;телефону, или рассчитайте цену на&nbsp;такси cамостоятельно

                            li.how__el
                                span.how__number 02
                                .how__text
                                    span.title Уточняем детали
                                    span Указываете время, адрес и&nbsp;нужный автомобиль

                            li.how__el
                                span.how__number 03
                                .how__text
                                    span.title Выезжаем
                                    span Дожидаетесь машину и&nbsp;отправляетсь в&nbsp;дорогу

                    picture.how__img.desktop
                        source(type='image/webp' srcset='/src/assets/img/img--how.webp 1x, /src/assets/img/img--how@2x.webp 2x')
                        img(srcset='/src/assets/img/img--how.jpg 1x, /src/assets/img/img--how@2x.jpg 2x' alt='Баннер')


        section.trick
            .container
                h2.h2 фишки TAkSE

                ul.trick__list
                    li.trick__el
                        .trick__header
